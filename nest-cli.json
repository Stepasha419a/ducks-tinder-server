{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "user-service/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "user-service/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "user-service",
  "projects": {
    "user": {
      "type": "application",
      "root": "user-service",
      "entryFile": "main",
      "sourceRoot": "user-service/src",
      "compilerOptions": {
        "tsConfigPath": "user-service/tsconfig.app.json"
      }
    },
    "chat": {
      "type": "application",
      "root": "chat-service",
      "entryFile": "main",
      "sourceRoot": "chat-service/src",
      "compilerOptions": {
        "tsConfigPath": "chat-service/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}
